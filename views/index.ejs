<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Video Game List</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>Video Game List</h1>

        <!-- Button to add a new game -->
        <div class="form-group">
            <a href="/games/new" class="button">Add New Game</a>
        </div>

        <div class="game-list-container">
            <% if (games && games.length > 0) { %>
                <ul class="game-list">
                    <% games.forEach(game => { %>
                        <li class="game-item card">
                            <h2><%= game.name %></h2>
                            <p>Genre: <%= game.genre %></p>
                            <p>Platform: <%= game.platform %></p>
                            <p>Developer: <%= game.developer %></p>
                            <p>Release Date: <%= new Date(game.release_date).toDateString() %></p>
                            
                            <div class="form-group">
                                <a href="/games/edit/<%= game.game_id %>" class="button">Edit</a>
                            
                                <form action="/games/delete/<%= game.game_id %>" method="POST" style="display: inline;">
                                    <button type="submit" class="button">Delete</button>
                                </form>
                            </div>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p>No games to display.</p>
            <% } %>
        </div>
    </div>
</body>
</html>
